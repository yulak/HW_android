<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nameCity"
        android:layout_width="227dp"
        android:layout_height="41dp"
        android:padding="10dp"
        android:text="@string/notAdd"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/temperature"
        android:textColor="#87CEFA"
        app:layout_constraintEnd_toStartOf="@+id/buttonCity"
        app:layout_constraintStart_toEndOf="@+id/nameCity"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCity"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:text="@string/buttonAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подробный прогноз"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:text="@string/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCity" />-->

</androidx.constraintlayout.widget.ConstraintLayout>

